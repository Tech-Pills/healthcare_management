<%= form_with(model: appointment) do |form| %>
  <% if appointment.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(appointment.errors.count, "error") %> prohibited this appointment from being saved:</h2>

      <ul>
        <% appointment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :practice_id, style: "display: block" %>
    <%= form.collection_select :practice_id, Practice.all, :id, :name, { prompt: "Select a practice" } %>
  </div>

  <div>
    <%= form.label :patient_id, style: "display: block" %>
    <%= form.collection_select :patient_id, Patient.all, :id, :full_name, { prompt: "Select a patient" } %>
  </div>

  <div>
    <%= form.label :provider_id, style: "display: block" %>
    <%= form.collection_select :provider_id, Staff.all, :id, :full_name, { prompt: "Select a provider" } %>
  </div>

  <div>
    <%= form.label :scheduled_at, style: "display: block" %>
    <%= form.datetime_field :scheduled_at %>
  </div>

  <div>
    <%= form.label :duration_minutes, style: "display: block" %>
    <%= form.number_field :duration_minutes %>
  </div>

  <div>
    <%= form.label :status, style: "display: block" %>
    <%= form.text_field :status %>
  </div>

  <div>
    <%= form.label :notes, style: "display: block" %>
    <%= form.textarea :notes %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
